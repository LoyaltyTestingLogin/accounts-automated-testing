{
  "name": "check24-login-testing",
  "version": "1.0.0",
  "description": "Automatisiertes E2E Testing fÃ¼r CHECK24 Login mit 24/7 Monitoring",
  "private": true,
  "scripts": {
    "install:playwright": "playwright install chromium",
    "test:playwright": "playwright test",
    "test:login": "playwright test tests/login",
    "test:headed": "playwright test --headed",
    "dev:web": "next dev -p 3000",
    "build:web": "next build",
    "start:web": "next start -p 3000",
    "dev:worker": "tsx watch src/worker/index.ts",
    "start:worker": "tsx src/worker/index.ts",
    "dev:api": "tsx watch src/api/server.ts",
    "start:api": "tsx src/api/server.ts",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:worker\" \"npm run dev:web\"",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@playwright/test": "^1.48.0",
    "axios": "^1.7.0",
    "better-sqlite3": "^11.0.0",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "isomorphic-fetch": "^3.0.0",
    "next": "^14.2.0",
    "node-cron": "^3.0.3",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.0",
    "prettier": "^3.3.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
