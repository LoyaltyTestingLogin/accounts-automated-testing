# CHECK24 Login Testing Configuration

# Base URL für CHECK24 Login
CHECK24_BASE_URL=https://accounts.check24.com

# Test-Account Zugangsdaten
TEST_EMAIL=your-test-email@example.com
TEST_PASSWORD=your-test-password

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Dashboard-Konfiguration
DASHBOARD_BASE_URL=http://localhost:3000
API_PORT=4000

# 24/7 Monitoring
# Test-Intervall in Minuten (z.B. 15 = alle 15 Minuten)
TEST_INTERVAL_MINUTES=15

# Playwright Konfiguration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_VIDEO=true
PLAYWRIGHT_SCREENSHOT=on-failure

# Database
DATABASE_PATH=./data/testresults.db

# Automatisches Löschen alter Test-Runs (in Tagen)
# Test-Runs älter als X Tage werden automatisch gelöscht (täglich um 3 Uhr)
CLEANUP_DAYS=4

# Timeouts (in Millisekunden)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=60000
